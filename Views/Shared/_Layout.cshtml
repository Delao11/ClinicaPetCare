<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clínica PetCare</title>

    <!-- BOOTSTRAP CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- ICONOS FONT AWESOME -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <style>
        body {
            background: linear-gradient(135deg, #a8edea, #fed6e3);
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: #009688;
        }

        .navbar-brand {
            color: white !important;
            font-weight: bold;
            font-size: 1.4rem;
        }

        .navbar-nav .nav-link {
            color: white !important;
            margin-right: 1rem;
            transition: 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #ffeb3b !important;
            }

        footer {
            background-color: #004d40;
            color: #fff;
            padding: 1rem 0;
            text-align: center;
            margin-top: auto;
        }

            footer a {
                color: #ffeb3b;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-paw me-2"></i>Clínica PetCare
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-house"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Mascota" asp-action="Index">
                            <i class="fa-solid fa-dog"></i> Mascotas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                            <i class="fa-solid fa-lock"></i> Privacidad
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- CONTENIDO PRINCIPAL -->
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="container">
            &copy; 2025 - Clínica PetCare 🐾 | <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
        </div>
    </footer>

    <!-- JS DE BOOTSTRAP -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SECCIÓN DE SCRIPTS PARA LAS VISTAS -->
    @RenderSection("Scripts", required: false)
</body>
</html>
